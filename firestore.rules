rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is doctor
    function isDoctor() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor';
    }
    
    // Helper function to check if user is patient
    function isPatient() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'patient';
    }
    
    // Users collection - more permissive for development
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Patients collection - more permissive for development
    match /patients/{patientId} {
      allow read, write: if isAuthenticated();
    }
    
    // Doctors collection - all authenticated users can read and write for development
    match /doctors/{doctorId} {
      allow read, write: if isAuthenticated();
    }
    
    // Appointments - more permissive for development
    match /appointments/{appointmentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Medical records - more permissive for development
    match /users/{userId}/medical_records/{recordId} {
      allow read, write: if isAuthenticated();
    }
    
    // Medical records (top-level collection)
    match /medical_records/{recordId} {
      allow read, write: if isAuthenticated();
    }
    
    // Prescriptions - more permissive for development
    match /prescriptions/{prescriptionId} {
      allow read, write: if isAuthenticated();
    }
    
    // Reviews - all authenticated users can read and write
    match /reviews/{reviewId} {
      allow read, write: if isAuthenticated();
    }
    
    // Doctor verifications - more permissive for development
    match /doctor_verifications/{verificationId} {
      allow read, write: if isAuthenticated();
    }
    
    // Chat messages - more permissive for development
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Family members - more permissive for development
    match /users/{userId}/family_members/{memberId} {
      allow read, write: if isAuthenticated();
    }
    
    // Family members (top-level collection)
    match /family_members/{memberId} {
      allow read, write: if isAuthenticated();
    }
    
    // Notifications - more permissive for development
    match /notifications/{notificationId} {
      allow read, write: if true; // Allow all operations for development
    }
    
    // Time slots - allow read access for all authenticated users, write for doctors
    match /time_slots/{slotId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Doctor schedules - allow read access for all authenticated users
    match /doctor_schedules/{doctorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Blocked slots - allow read access for all authenticated users
    match /blocked_slots/{slotId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Medicines collection - allow read access for all authenticated users
    match /medicines/{medicineId} {
      allow read: if true; // Public read access for medicine directory
      allow write: if isAuthenticated();
    }
    
    // Medicine categories collection - allow read access for all authenticated users
    match /medicine_categories/{categoryId} {
      allow read: if true; // Public read access for medicine categories
      allow write: if isAuthenticated();
    }
    
    // Home remedies collection - allow read access for all authenticated users
    match /home_remedies/{remedyId} {
      allow read: if true; // Public read access for home remedies
      allow write: if isAuthenticated();
    }
    
    // Home remedy categories collection - allow read access for all authenticated users
    match /home_remedy_categories/{categoryId} {
      allow read: if true; // Public read access for home remedy categories
      allow write: if isAuthenticated();
    }
    
    // Payments collection - more permissive for development
    match /payments/{paymentId} {
      allow read, write: if isAuthenticated();
    }
    
    // Doctor revenue collection - allow doctors to read their own revenue data
    match /doctor_revenue/{revenueId} {
      allow read, write: if isAuthenticated();
    }
    
    // Default rule for any other collections - allow authenticated users
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
